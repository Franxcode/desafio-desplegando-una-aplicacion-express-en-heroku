<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {{> title }}
</head>
<body class="d-flex flex-column min-vh-100">
    {{!-- Navbar --}}
    {{> navbar }}
    <div class="container my-3">
        <div class="row">
            <div class="col">
                <form onsubmit="return insertUser(event)">
                    <label for="username" class="my-3">Username:</label>
                    <input type="text" id="username" class="form-control" placeholder="Ingrese su username" required>
                    <label for="email" class="my-3">Email:</label>
                    <input type="email" id="email" class="form-control" placeholder="Ingrese su email" required>
                    <label for="password" class="my-3">Password:</label>
                    <input type="password" id="password" class="form-control" placeholder="Ingrese el password" required>
                    <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary my-3">Agregar usuario</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    {{> footer }}
    <script src="/assets/create.js"></script>
</body>
</html>